<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="@android:color/white"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:id="@+id/basic_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="15dp">

            <info.hoang8f.widget.FButton
                android:id="@+id/primary_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|top"
                android:layout_margin="10dp"
                android:textAllCaps="false"
                android:minHeight="@dimen/demo_button_min_height"
                android:minWidth="@dimen/demo_button_min_width"
                android:text="Primary Button"
                fbutton:buttonColor="@color/fbutton_color_turquoise"
                fbutton:customBackground="false"
                fbutton:shadowEnabled="false" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/basicName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/demo_button_min_height"
                android:minWidth="@dimen/demo_button_min_width"
                android:focusableInTouchMode="true"
                android:hint="NAME"
                android:singleLine="true"
                android:imeOptions="actionDone"
                android:focusable="true"
                android:gravity="bottom"
                app:met_underlineColor="@color/text_color"
                android:layout_gravity="left|center_vertical" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/basicEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/demo_button_min_height"
                android:minWidth="@dimen/demo_button_min_width"
                android:focusableInTouchMode="true"
                android:hint="EMAIL ADDRESS"
                android:focusable="true"
                android:singleLine="true"
                android:layout_marginTop="20dp"
                android:imeOptions="actionDone"
                app:met_underlineColor="@color/text_color"
                android:layout_gravity="left|center_vertical" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/basicEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/demo_button_min_height"
                android:minWidth="@dimen/demo_button_min_width"
                android:focusableInTouchMode="true"
                android:hint="PASSWORD"
                android:focusable="true"
                android:singleLine="true"
                android:imeOptions="actionDone"
                android:layout_marginTop="20dp"
                app:met_underlineColor="@color/text_color"
                android:layout_gravity="left|center_vertical" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/basicEr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/demo_button_min_height"
                android:minWidth="@dimen/demo_button_min_width"
                android:focusableInTouchMode="true"
                android:hint="PASSWORD AGAIN"
                android:focusable="true"
                android:imeOptions="actionDone"
                android:layout_marginTop="20dp"
                android:singleLine="true"
                app:met_underlineColor="@color/text_color"
                android:layout_gravity="left|center_vertical" />

            <info.hoang8f.widget.FButton
                android:id="@+id/disabled_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:layout_margin="10dp"
                android:minHeight="@dimen/demo_button_min_height"
                android:minWidth="@dimen/demo_button_min_width"
                android:text="Sign up"
                android:textAllCaps="false"
                fbutton:shadowEnabled="false"
                fbutton:buttonColor="#00CC00"
                fbutton:theme="@style/Base.TextAppearance.AppCompat.Button"
                fbutton:cornerRadius="5px"
                android:textColor="@drawable/button_text_color" />

            <info.hoang8f.widget.FButton
                android:id="@+id/color_button"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_gravity="right|bottom"
                android:layout_margin="10dp"
                android:textAllCaps="false"
                fbutton:facebookBtn="true"
                fbutton:customBackground="false"
                fbutton:shadowEnabled="false"
                fbutton:buttonColor="#00CC00"
                fbutton:cornerRadius="75dp" />
        </LinearLayout>
    </RelativeLayout>

</ScrollView>